
// menu  tidi
.Navtidi
  position  relative
  display  block
  list-style-type  none
  margin 0
  padding 0
  background-color  Primario
  
.Navtidi ul 
  text-align center

.Navtidi li
  display inline-block
  background-color Primario
  border-radius
  width 15%
  list-style none 
  color white 
  font-size 150%
  
.Navtidi li a 
  display block 
  padding 15px 
  text-decoration none
  color white
  -webkit-transition 0.5s
  -moz-transition 0.5s
  -o-transition 0.5s
  -ms-transition 0.5s
  transition 0.5s
  
.Navtidi li a:hover 
  color #fff
  text-shadow -1px 1px 5px Primario, 1px -1px 5px Primario
  background-color acent
  
.Navtidi ul li 
  padding 0px 

.Navtidi label 
  display none
#menu-toggle 
  display none


@media all and (max-width:700px) and (min-width:0px)
 .Navtidi 
   text-align right
 .Navtidi label 
   display  block
   height 50px
   width 50px
   line-height 50px
   text-align center
   color white
   font-size 150%
   background-color acent
   cursor pointer
   
 .Navtidi #nav 
   display none
#menu-toggle:checked + #nav 
   display block
.Navtidi label:active #nav
   display none
